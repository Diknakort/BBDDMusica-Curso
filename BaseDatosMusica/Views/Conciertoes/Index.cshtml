@model IEnumerable<BaseDatosMusica.Models.Concierto>

@{
    ViewData["Title"] = "Index";
}

<h1>CONCIERTOS</h1>

<p>
    <a asp-action="Create"><img src="~/img/añadircanciones.png" width="40px" height="40px" /></a>
</p>

<form asp-controller="Conciertoes" asp-action="Index">
    <p>
        Concierto: <input type="text" name="SearchString" />
        <input type="submit" value="Filtrar" />
    </p>
</form>

<table class="table">
    <thead>
    <tr>
        <th>Precio</th>
        <th>Fecha y Hora</th>
        <th>Ciudad</th>
        <th>Gira</th>
        <th>Grupo</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
            <td>@Html.DisplayFor(modelItem => item.FechaHora)</td>
            <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
            <td>@Html.DisplayFor(modelItem => item.Giras!.Nombre)</td>
            <td>@Html.DisplayFor(modelItem => item.Grupos!.Nombre)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    <img class="iconos" src="~/img/editar-removebg-preview.png" width="40px" height="30px" alt="Editar" />
                </a> |
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img class="iconos" src="~/img/detalles-removebg-preview.png" width="30px" height="30px" alt="Detalles" />
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id">
                    <img class="iconos" src="~/img/borrar-removebg-preview.png" width="48px" height="30px" alt="Borrar" />
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>