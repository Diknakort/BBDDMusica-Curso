@model BaseDatosMusica.Models.Artista

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Artista</h1>


<hr />
<div class="fondoblanco">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="NombreReal" class="control-label"></label>
                    <input asp-for="NombreReal" class="form-control" />
                    <span asp-validation-for="NombreReal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombreArtistico" class="control-label"></label>
                    <input asp-for="NombreArtistico" class="form-control" />
                    <span asp-validation-for="NombreArtistico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaNacimiento" class="control-label"></label>
                    <input asp-for="FechaNacimiento" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RolPrincipal" class="control-label"></label>
                    <select asp-for="RolPrincipal" class="form-control" asp-items="ViewBag.RolPrincipal"></select>
                    <span asp-validation-for="RolPrincipal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index"><img src="~/img/flechaatras.png" width="35px" height="35px" /></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
